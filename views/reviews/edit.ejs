<% layout('layout') -%>

<h4 class="center">Edit your review</h4>
<div class="row">
	<form action="/services/<%= service_id %>/reviews/<%= review._id %>?_method=PUT" method="POST" class="col s6 offset-s3">
		<div class="card-panel">
			<div class="row">
				<div class="input-field col s12">
          <textarea id="text" name="text"><%= review.text %></textarea>
          <label for="text">How was your experience?</label>
        </div>
			</div>
			<div class="row">
				<div class="input-field col s6">
          <input id="rating" type="number" name="rating" class="validate" value="<%= review.rating %>" min="1" max="5" step="0.5">
          <label for="rating">Rating:</label>
        </div>
	      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="input-field col s6">
          <button class="btn orange darken-4" type="submit">Submit</button>
        </div>
			</div>
		</div>
	</form>
</div>