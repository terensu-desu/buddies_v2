<% layout('layout') -%>
<div class="row">
	<div class="col m12 l6">
		<div class="card-panel">
		<h4>Featured Requests</h4>
		<div class="row">
			<% requestServices.forEach(function (service) { %>
		  <div class="col m12 l6">
		    <div class="card">
		    	<a href="/services/<%= service._id %>">
			      <div class="card-image">
			        <img src="<%= service.image %>" class="fixed-img"/>
			      </div>
			      <div class="card-content">
			      	<p class="black-text"><%= service.headline %></p>
			      	<span class="card-title"><%= service.title %></span>
			      	<p class="black-text">¥<%= service.price %> per person</p>
			      	<p class="black-text"><%= service.rating %>--RATING HERE--</p>
			      </div>
		      </a>
		    </div>
		  </div>
			<% }) %>
			<a href="#" class="btn right orange darken-3 browse-more">Browse more</a>
		</div>
		</div>
	</div>
	<div class="col m12 l6">
		<div class="card-panel">
		<h4>Featured Support</h4>
		<div class="row">
			<% supportServices.forEach(function(service) { %>
		  <div class="col m12 l6">
		    <div class="card">
		    	<a href="/services/<%= service._id %>">
			      <div class="card-image">
			        <img src="<%= service.image %>" class="fixed-img"/>
			      </div>
			      <div class="card-content">
			      	<p class="black-text"><%= service.headline %></p>
			      	<span class="card-title"><%= service.title %></span>
			      	<p class="black-text">¥<%= service.price %> per person</p>
			      	<p class="black-text"><%= service.rating %>--RATING HERE--</p>
			      </div>
		      </a>
		    </div>
		  </div>
			<% }) %>
			<a href="#" class="btn right orange darken-3 browse-more">Browse more</a>
		</div>
		</div>
	</div>
</div>

